@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ClaimStream</title>
    <link rel="stylesheet" href="styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Lobster&family=Poppins:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="title">Claims System</h1>
        <div class="buttons">
            <a href="/identity/Account/Login" class="login">LOGIN</a>
            <a href="/identity/Account/Register" class="register">REGISTER</a>
        </div>
    </div>
</body>
</html>

<style>
    body, html {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #261132; /* Dark purple background */
        font-family: 'Poppins', sans-serif;
    }

    .container {
        text-align: center;
        color: #ffffff; /* White text */
    }

    .title {
        font-size: 5em;
        color: #f1c40f; /* Complementary yellow for the title */
        font-family: 'Lobster', cursive;
        margin-bottom: 50px;
    }

    .buttons {
        display: flex;
        justify-content: center;
        gap: 20px;
    }

    a {
        font-size: 1.5em;
        padding: 15px 30px;
        border: none;
        cursor: pointer;
        border-radius: 10px;
        text-decoration: none;
        color: #ffffff; /* White font color */
        width: 200px;
        text-align: center;
        transition: all 0.3s ease;
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
    }

    /* LOGIN button */
    .login {
        background-color: #534B58; /* Grey background */
    }

        .login:hover {
            background-color: #f1c40f; /* Yellow hover effect */
            color: #261132; /* Dark purple text on hover */
        }

    /* REGISTER button */
    .register {
        background-color: #261132; /* Dark purple background */
        border: 2px solid #f1c40f; /* Yellow border */
    }

        .register:hover {
            background-color: #f1c40f; /* Yellow hover effect */
            color: #261132; /* Dark purple text on hover */
        }
</style>
