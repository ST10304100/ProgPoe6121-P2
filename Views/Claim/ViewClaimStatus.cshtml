    }

    .heading {
        color: #261132;
        font-size: 1.8rem;
        margin-bottom: 20px;
        text-align: center;
    }

    .status-summary {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .status-item {
        padding: 10px;
        border-radius: 5px;
        text-align: center;
